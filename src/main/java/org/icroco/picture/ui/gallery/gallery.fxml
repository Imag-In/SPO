<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.BreadCrumbBar?>
<?import org.controlsfx.control.GridView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="layout" stylesheets="/css/dark.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.icroco.picture.ui.gallery.GalleryController">
    <center>
        <GridView fx:id="gridView" horizontalCellSpacing="0" prefHeight="600.0" prefWidth="600.0" verticalCellSpacing="0"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <ToolBar HBox.hgrow="ALWAYS">
                    <items>
                        <Label fx:id="expand" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#expandGridCell" prefHeight="24.0">
                            <graphic>
                                <FontIcon id="fitGridCell"/>
                            </graphic>
                        </Label>
                        <Slider fx:id="zoomThumbnails" minorTickCount="5" scaleX="0.7" scaleY="0.7"/>
                        <BreadCrumbBar fx:id="breadCrumbBar" HBox.hgrow="ALWAYS"/>
                        <!--                        <Pane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />-->
                        <Label fx:id="nbImages" alignment="CENTER_RIGHT" prefWidth="100.0" text=""/>
                        <Label alignment="CENTER_RIGHT" text=" files"/>
                    </items>
                </ToolBar>
            </children>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</BorderPane>
