<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.BreadCrumbBar?>
<?import org.icroco.picture.ui.util.CustomGridView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane fx:id="layout" stylesheets="/css/dark.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.icroco.picture.ui.gallery.GalleryController"
           minWidth="300" minHeight="256">
    <children>
        <BorderPane fx:id="gallery" stylesheets="/css/dark.css">
            <center>
                <CustomGridView fx:id="gridView" horizontalCellSpacing="0" verticalCellSpacing="0"/>
            </center>
            <bottom>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Label fx:id="expand" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#expandGridCell" prefHeight="24.0">
                                    <graphic>
                                        <FontIcon id="fitGridCell"/>
                                    </graphic>
                                </Label>
                                <Slider fx:id="zoomThumbnails" minorTickCount="5" scaleX="0.7" scaleY="0.7"/>
                                <BreadCrumbBar fx:id="breadCrumbBar" HBox.hgrow="ALWAYS"/>
                                <!--                        <Pane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />-->
                                <Label fx:id="nbImages" alignment="CENTER_RIGHT" prefWidth="100.0" text=""/>
                                <Label alignment="CENTER_RIGHT" text=" files"/>
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
            </bottom>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </BorderPane>
        <BorderPane fx:id="carousel" visible="false">
            <center>
                <StackPane fx:id="photoContainer"
                           style="-fx-border-color: red; -fx-border-width: 1; -fx-border-style: solid;"
                           BorderPane.alignment="CENTER">
                    <!--                                 <children>-->
                    <!--                                    <ImageView fx:id="photo" fitHeight="534.0" fitWidth="564.0" pickOnBounds="true" preserveRatio="true" />-->
                    <!--                                 </children>-->
                </StackPane>
            </center>
            <bottom>
                <ListView fx:id="carouselIcons" nodeOrientation="LEFT_TO_RIGHT" orientation="HORIZONTAL" BorderPane.alignment="CENTER">
                    <opaqueInsets>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </opaqueInsets>
                </ListView>
            </bottom>

        </BorderPane>
    </children>
</StackPane>
